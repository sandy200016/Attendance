<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_reg">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="420dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/border_layout">


        <EditText
            android:id="@+id/teacher_name"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/name"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="7dp"
            android:hint="Full name"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/teacher_id"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_person"
            android:drawableLeft="@drawable/et_person"
            android:drawablePadding="7dp"
            android:hint="College id"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/teacher_pass"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_password"
            android:drawableLeft="@drawable/et_password"
            android:drawablePadding="7dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/teacher_password"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_password"
            android:drawableLeft="@drawable/et_password"
            android:drawablePadding="7dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:background="@drawable/bt_border"
            android:onClick="reg_Teacher"
            android:text="Register"
            android:textColor="#ffff33"
            tools:ignore="OnClick" />


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@mipmap/register_foreground" />


</FrameLayout>