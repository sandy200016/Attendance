<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_reg">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="465dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/border_layout">

        <EditText
            android:id="@+id/student_name"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/name"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="7dp"
            android:hint="Full name"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/student_rollno"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/rollno_et"
            android:drawableLeft="@drawable/rollno_et"
            android:drawablePadding="7dp"
            android:hint="Rollno"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/student_id"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_person"
            android:drawableLeft="@drawable/et_person"
            android:drawablePadding="7dp"
            android:hint="College id"
            android:inputType="number"
            android:padding="10dp" />

        <RadioGroup
            android:id="@+id/class_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:orientation="horizontal"


            >

            <RadioButton
                android:id="@+id/FY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:buttonTint="@color/RadioColor"
                android:checked="true"
                android:soundEffectsEnabled="true"
                android:text="FY" />

            <RadioButton
                android:id="@+id/SY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:buttonTint="@color/RadioColor"
                android:soundEffectsEnabled="true"
                android:text="SY" />

            <RadioButton
                android:id="@+id/TY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:buttonTint="@color/RadioColor"
                android:soundEffectsEnabled="true"
                android:text="TY" />

        </RadioGroup>

        <EditText
            android:id="@+id/student_pass"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_password"
            android:drawableLeft="@drawable/et_password"
            android:drawablePadding="7dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/student_cpass"

            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:background="@drawable/et_border"
            android:drawableStart="@drawable/et_password"

            android:drawableLeft="@drawable/et_password"
            android:drawablePadding="7dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="410dp"
            android:background="@drawable/bt_border"
            android:onClick="reg_Student"
            android:text="Register"
            android:textColor="#ffff33"

            tools:ignore="OnClick" />


    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@mipmap/register_foreground" />

</FrameLayout>