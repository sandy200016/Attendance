<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:paddingBottom="20dp"
    android:background="@drawable/popup_layout">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/rename_foreground"
        android:layout_marginTop="20dp"
        />



    <EditText
        android:id="@+id/et_rename_subject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/et_person"
        android:drawableLeft="@drawable/et_person"
        android:drawablePadding="7dp"
        android:hint="Subject_Name"
        android:textColorHint="@color/dark_grey"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        />


    <Button
        android:id="@+id/bt_rename_subject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bt_border"
        android:onClick="ADD_ID"
        android:text="Rename"
        android:layout_marginTop="160dp"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"/>


</RelativeLayout>