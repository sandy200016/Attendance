<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/subject_Attendance_layout"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/subject_attendance_recycler_border"
    android:padding="4dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    >
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/subject_Attendance_graph"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/subject_Attendance_Student_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:text="Santosh Bogati"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="110dp"
        android:text="Attended:"
        android:textColor="@color/white"
        android:textSize="15dp"
         />
    <TextView
        android:id="@+id/subject_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="185dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="15dp"
        />


</RelativeLayout>